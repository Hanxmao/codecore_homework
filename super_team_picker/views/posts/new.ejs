<%- include('../partials/header.ejs') %>
    <form action="/posts" method="POST">
        <div class="'form-control">
            <label for="logoUrl" >Logo Url</label>
            <input 
            type="url"
            class="form-control"
            name="logoUrl"
            placeholder="Paste your team logo url here"
            value="<%= post ? post.logoUrl : '' %>"
            >
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input 
            type="text"
            class="form-control"
            name="name"
            placeholder="Type in your team's name"
            value="<%= post ? post.name : '' %>"
            >
        </div>
        <div class="form-group">
            <label for="members">Members</label><br/>
            <textarea
            name="members"
            placeholder="Type in your team members here"  
            cols="80" 
            rows="5"
            ><%- post ? post.members : '' %>
            </textarea>
        </div>
        <input type="submit" value="Create new cohort" class="btn btn-outline-success">
    </form>
<%- include('../partials/footer.ejs') %>